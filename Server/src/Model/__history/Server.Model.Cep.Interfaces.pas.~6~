unit Server.Model.Cep.Interfaces;

interface

type
  TDadosCep = record
    cep: string;
    logradouro: string;
    complemento: string;
    bairro: string;
    localidade: string;
    uf: string;
  end;

  IModelCep = interface
    ['{9F0EF2EC-D279-4E45-AA27-1DB2623DA501}']
    /// <summary>
    ///   Realiza a consulta do CEP passamdo por parâmetro.
    /// </summary>
    /// <param name="ACep">
    ///   Informe o Cep a ser consultado
    /// </param>
    /// <returns>
    ///   Retorno um RECORD do tipo TDadosCep, com as informações do cep requisitado
    /// </returns>
    function ConsultaCep(const ACep: string): TDadosCep;
  end;

implementation

end.
